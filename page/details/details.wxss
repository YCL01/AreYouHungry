.header{
  width: 100%;
}
.banner{
  width: 100%;
  height: 750rpx;
}
.description{
  width: 100%;
  height: 240rpx;
  padding: 36rpx;
  box-sizing: border-box;
}
.title{
  font-size: 28rpx;
  font-weight: 700;
  color: rgb(7,17,27);
  /* line-height: 28px; */
}
.SalesVolume{
  font-size: 20rpx;
  color: rgb(147, 153, 159);
  /* line-height: 20rpx; */
  margin-top:16rpx;
}
.SalesVolume text{
  margin-left:24rpx;
}
.buy{
  width: 100%;  
  margin-top: 36rpx;
  height: 50rpx;
  line-height:50rpx;
}
.price{
  float: left;
  font-size:20rpx/28rpx;
  font-weight:normal/700;
  color: red;
}
.price text{
  margin-left:24rpx;
  font-size:20rpx;
  font-weight:normal/700;
  color:rgb(147,153, 159);
  /* line-height:48rpx; */
}
.buy>button{
  float: right;
  width: 148rpx;
  height: 48rpx;
  line-height:48rpx;
  border-radius: 24rpx;
  background: rgb(0,160,220);
  font-size:20rpx;
  color:rgb(255,255,255);
}
.bor{
  width:100%;
  height:32rpx;
  border: 1rpx solid;
  color:#f3f5f7;
  border-color:rgba(7,17,27,0.1)
}
.introduce{
  width: 100%;
  padding: 36rpx;
  box-sizing:border-box;
}
.introduce>view:nth-child(2){
  margin-top: 12rpx;
  width:90%;
  font-size: 24rpx;
  font-weight:200;
  color: rgb(77,85,93);
  line-height: 48rpx;
  letter-spacing: 3rpx;
}
.evaluate{
  width: 100%;
  padding:36rpx;
  box-sizing:border-box;
}
.btn {
  width:90%;
  height: 80rpx;
  margin-top:12rpx;
  padding: 24rpx 0 36rpx 0;
  border-bottom: 1rpx solid rgba(7,17,27,0.1);
}
.btn>text{
  display:inline-block;
  width:180rpx;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
  margin-right: 16rpx;
  font-size:24rpx/16rpx;
  border-radius: 2rpx;
}
.btn>text:nth-child(1){
  color: rgb(255,255,255);
  background:rgb(66,158,214);
}
.btn>text:nth-child(2){
  color:rgb(77,85,93);
  background:rgb(210,235,246);
}
.btn>text:nth-child(3){
  color:rgb(77,85,93);
  background:rgba(77,85,93,0.2);
}
.JustLook{
  width: 100%;
  height:80rpx;
  padding-left:36rpx;
  box-sizing: border-box; 
  display: flex;
  border-bottom: 1rpx solid rgb(204,204,204);
}
.JustLook>view{
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 48rpx;
  color: white;
  background:rgb(147, 153, 159);
  margin-right:8rpx;
}
.JustLook>text{
  display: block;
  height: 48rpx;
  font-size:24rpx;
  color: rgb(147, 153, 159);
  line-height: 48rpx;
}
.main{
  padding: 0 36rpx;
  margin-bottom: 140rpx;
  box-sizing: border-box;
}
.comment{
  width: 100%;
  padding: 32rpx 0;
  box-sizing:border-box;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(7,17,27,0.1);
}
.time{
  font-size:20rpx;
  color: rgb(147,153,159);
  margin-bottom: 20rpx;
  /* line-height: 32rpx; */
}
.content{
  font-size: 24rpx;
  color: rgb(147, 153, 159);
}
.content>text{
  font-size: 24rpx;
  color: rgb(147,153,159);
  /* line-height: 48rpx; */
}
.right{
  display: flex;
  align-items: center;
  height:40rpx; 
}
.ID{
  font-size: 20rpx;
  color: rgb(147, 153, 159);
  margin-right: 12rpx;
}
.right>image{
  width: 24rpx;
  height: 24rpx;
  border-radius: 24rpx;
}
.foot{
  height: 100rpx;
  width:100%;
  background: #141d27;
  position: fixed;
  bottom: 0;
  left: 0;
  /* position: relative; */
}
.homcart{
  padding: 12rpx;
  height: 116rpx;
  width: 116rpx;
  background: #141d27;
  border-radius: 50%;
  position: absolute;
  left: 20rpx;
  bottom: 4rpx;
}
.homcart view{
  width: 88rpx;
  height: 88rpx;
  background: rgb(45, 52, 59);
  border-radius: 50%;
  margin: 14rpx auto;
   display: flex;
  justify-content: center;
  align-items: center;
}
.homcart view>image{
  width: 50rpx;
  height: 50rpx;
}
.many{
  line-height: 100rpx;
  display: flex;
  color: rgb(255, 255, 255,0.4);
  justify-content: flex-end;
}
.qisong{
  width: 210rpx;
  background: rgb(255, 255, 255,0.2);
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
}
.peifei{
  padding-left:24rpx; 
  width: 280rpx;
}
.talpig{
  padding-right:24rpx;
  border-right: 1px solid rgba(255,255,255,0.1) ;
  height: 48rpx;
  margin-top:30rpx; 
  line-height: 134%;
  font-size: 38rpx;
  font-weight: 700;
  z-index: 10
}
